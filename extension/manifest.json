{
  "manifest_version": 3,
  "name": "mora - Domain Time Tracker",
  "version": "1.0.0",
  "description": "Track time spent on different domains",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "idle"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "mora Time Tracker"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}